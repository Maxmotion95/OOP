<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="900.0" prefWidth="1600.0" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.nsu.fit.lylova.javafxsnake.controller.SnakeFieldScreenController">
    <children>
        <Pane prefHeight="900.0" prefWidth="900.0"
              style="-fx-background-color: &quot;#977b26&quot;;">
            <children>
                <GridPane fx:id="field" alignment="CENTER" maxHeight="-Infinity"
                          maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                          prefHeight="900.0" prefWidth="900.0" snapToPixel="false"
                          style="-fx-stroke: &quot;#977b26&quot;; -fx-alignment: center; -fx-padding: 50 50 50 50;">
                    <columnConstraints>
                        <ColumnConstraints/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Pane prefHeight="200.0" prefWidth="200.0"
                              style="-fx-background-color: #eccd79;" GridPane.columnIndex="1"
                              GridPane.rowIndex="1"/>
                        <Pane prefHeight="200.0" prefWidth="200.0"
                              style="-fx-background-color: #f2d78c;" GridPane.columnIndex="2"
                              GridPane.rowIndex="1"/>
                        <Pane prefHeight="200.0" prefWidth="200.0"
                              style="-fx-background-color: #eccd79;" GridPane.columnIndex="3"
                              GridPane.rowIndex="1"/>
                        <Pane prefHeight="200.0" prefWidth="200.0"
                              style="-fx-background-color: #f2d78c;" GridPane.columnIndex="1"
                              GridPane.rowIndex="2"/>
                        <Pane prefHeight="200.0" prefWidth="200.0"
                              style="-fx-background-color: #eccd79;" GridPane.columnIndex="2"
                              GridPane.rowIndex="2"/>
                        <Pane prefHeight="200.0" prefWidth="200.0"
                              style="-fx-background-color: #f2d78c;" GridPane.columnIndex="3"
                              GridPane.rowIndex="2"/>
                        <Pane prefHeight="200.0" prefWidth="200.0"
                              style="-fx-background-color: #eccd79;" GridPane.columnIndex="1"
                              GridPane.rowIndex="3"/>
                        <Pane prefHeight="200.0" prefWidth="200.0"
                              style="-fx-background-color: #f2d78c;" GridPane.columnIndex="2"
                              GridPane.rowIndex="3"/>
                        <Pane prefHeight="200.0" prefWidth="200.0"
                              style="-fx-background-color: #eccd79;" GridPane.columnIndex="3"
                              GridPane.rowIndex="3"/>
                    </children>
                </GridPane>
            </children>
        </Pane>
        <Pane layoutX="900.0" prefHeight="900.0" prefWidth="700.0"
              style="-fx-background-color: #725e1d;">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" layoutY="41.0" prefHeight="107.0"
                       prefWidth="350.0" text="SCORE" textAlignment="CENTER" textFill="WHITE"
                       wrapText="true">
                    <font>
                        <Font name="Dubai Medium" size="80.0"/>
                    </font>
                </Label>
                <Label fx:id="scoreLabel" alignment="CENTER" layoutY="128.0" prefHeight="88.0"
                       prefWidth="350.0" text="0" textAlignment="CENTER" textFill="#e7471d">
                    <font>
                        <Font name="Dubai Medium" size="80.0"/>
                    </font>
                </Label>
                <Label alignment="CENTER_RIGHT" layoutY="526.0" prefHeight="58.0" prefWidth="680.0"
                       text="Left arrow or A - turn snake to left" textFill="#fdee47">
                    <font>
                        <Font name="Dubai Medium" size="40.0"/>
                    </font>
                </Label>
                <Label alignment="CENTER_RIGHT" layoutY="598.0" prefHeight="41.0" prefWidth="680.0"
                       text="Right arrow or D - turn snake to right" textFill="#fdee47">
                    <font>
                        <Font name="Dubai Medium" size="40.0"/>
                    </font>
                </Label>
                <Label alignment="CENTER_RIGHT" layoutY="670.0" prefHeight="41.0" prefWidth="680.0"
                       text="Up arrow or W - turn snake to up" textFill="#fdee47">
                    <font>
                        <Font name="Dubai Medium" size="40.0"/>
                    </font>
                </Label>
                <Label alignment="CENTER_RIGHT" layoutY="742.0" prefHeight="41.0" prefWidth="680.0"
                       text="Down arrow or S - turn snake to down" textFill="#fdee47">
                    <font>
                        <Font name="Dubai Medium" size="40.0"/>
                    </font>
                </Label>
                <Label alignment="CENTER_RIGHT" layoutY="814.0" prefHeight="41.0" prefWidth="680.0"
                       text="ESC - pause" textFill="#fdee47">
                    <font>
                        <Font name="Dubai Medium" size="40.0"/>
                    </font>
                </Label>
                <Label alignment="CENTER_RIGHT" layoutY="454.0" prefHeight="41.0" prefWidth="680.0"
                       text="ENTER or SPACE - start game" textFill="RED">
                    <font>
                        <Font name="Dubai Medium" size="40.0"/>
                    </font>
                </Label>
                <Label alignment="CENTER" contentDisplay="CENTER" layoutX="350.0" layoutY="41.0"
                       prefHeight="107.0" prefWidth="350.0" text="🏆" textAlignment="CENTER"
                       textFill="WHITE" wrapText="true">
                    <font>
                        <Font name="Dubai Medium" size="80.0"/>
                    </font>
                </Label>
                <Label fx:id="recordLabel" alignment="CENTER" layoutX="350.0" layoutY="128.0"
                       prefHeight="88.0" prefWidth="350.0" text="0" textAlignment="CENTER"
                       textFill="#e7471d">
                    <font>
                        <Font name="Dubai Medium" size="80.0"/>
                    </font>
                </Label>
                <Label alignment="CENTER" layoutY="343.0" prefHeight="58.0" prefWidth="680.0"
                       text="HOW TO PLAY" textFill="#e7471d">
                    <font>
                        <Font name="Dubai Medium" size="60.0"/>
                    </font>
                </Label>
            </children>
        </Pane>
        <Pane fx:id="pausePane" prefHeight="900.0" prefWidth="1600.0" visible="false">
            <children>
                <Pane opacity="0.7" prefHeight="900.0" prefWidth="1600.0"
                      style="-fx-background-color: BLACK;"/>
                <Pane layoutX="400.0" layoutY="50.0" prefHeight="800.0" prefWidth="800.0"
                      style="-fx-background-color: #5fb7e3; -fx-background-radius: 50;">
                    <children>
                        <Button layoutX="50.0" layoutY="200.0" onAction="#exitFromPause"
                                prefHeight="170.0" prefWidth="700.0"
                                style="-fx-background-radius: 20; -fx-background-color: #1155cc;"
                                text="▶ Continue" textFill="WHITE">
                            <font>
                                <Font name="Dubai Medium" size="70.0"/>
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </Button>
                        <Button alignment="CENTER" layoutX="50.0" layoutY="430.0"
                                mnemonicParsing="false" onAction="#switchToStartScreen"
                                prefHeight="170.0" prefWidth="700.0"
                                style="-fx-background-radius: 20; -fx-background-color: #1155cc;"
                                text="⌂ Menu" textFill="WHITE">
                            <font>
                                <Font name="Dubai Medium" size="70.0"/>
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </Button>
                    </children>
                </Pane>
            </children>
        </Pane>
        <Pane fx:id="gameOverPane" prefHeight="900.0" prefWidth="1600.0" visible="false">
            <children>
                <Pane opacity="0.7" prefHeight="900.0" prefWidth="1600.0"
                      style="-fx-background-color: BLACK;"/>
                <Pane layoutX="400.0" layoutY="50.0" prefHeight="800.0" prefWidth="800.0"
                      style="-fx-background-color: #edc963; -fx-background-radius: 50;">
                    <children>
                        <Label alignment="CENTER" layoutY="78.0" prefHeight="110.0"
                               prefWidth="800.0" text="GAME OVER!" textFill="RED">
                            <font>
                                <Font name="Dubai Medium" size="80.0"/>
                            </font>
                        </Label>
                        <Label alignment="CENTER" layoutX="14.0" layoutY="236.0" prefHeight="107.0"
                               prefWidth="202.0" text="Score:">
                            <font>
                                <Font name="Dubai Medium" size="60.0"/>
                            </font>
                        </Label>
                        <Label fx:id="gameOverScoreLabel" alignment="CENTER" layoutX="216.0"
                               layoutY="219.0" prefHeight="142.0" prefWidth="160.0" text="100"
                               textFill="#e7471d">
                            <font>
                                <Font name="Dubai Medium" size="80.0"/>
                            </font>
                        </Label>
                        <Button layoutX="258.0" layoutY="400.0" mnemonicParsing="false"
                                onAction="#restartGame"
                                style="-fx-background-radius: 15; -fx-background-color: #48402a;"
                                text="RESTART" textFill="WHITE">
                            <font>
                                <Font name="Dubai Medium" size="60.0"/>
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </Button>
                        <Button layoutX="285.0" layoutY="575.0" mnemonicParsing="false"
                                onAction="#switchToStartScreen"
                                style="-fx-background-radius: 15; -fx-background-color: #48402a;"
                                text="⌂ Menu" textFill="WHITE">
                            <font>
                                <Font name="Dubai Medium" size="60.0"/>
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </Button>
                        <Label alignment="CENTER" layoutX="421.0" layoutY="237.0" prefHeight="72.0"
                               prefWidth="114.0" text="🏆">
                            <font>
                                <Font name="Dubai Medium" size="60.0"/>
                            </font>
                        </Label>
                        <Label fx:id="gameOverRecordScoreLabel" alignment="CENTER" layoutX="550.0"
                               layoutY="220.0" prefHeight="142.0" prefWidth="160.0" text="100"
                               textFill="#e7471d">
                            <font>
                                <Font name="Dubai Medium" size="80.0"/>
                            </font>
                        </Label>
                    </children>
                </Pane>
            </children>
        </Pane>
    </children>
</Pane>
